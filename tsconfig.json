{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ESNext.Array"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/presentation/assets/*"],
      "@store/*": ["./src/presentation/providers/store/*"],
      "@components/*": ["./src/presentation/components/*"],
      "@hooks/*": ["./src/presentation/hooks/*"],
      "@mocks/*": ["./src/presentation/mocks/*"],
      "@entities/*": ["./src/domain/entities/*"],
      "@interfaces/*": ["./src/domain/interfaces/*"],
      "@use-cases/*": ["./src/domain/use-cases/*"],
      "@data-sources/*": ["./src/application/data-sources/*"],
      "@repositories/*": ["./src/application/repositories/*"],
      "@modules/*": ["./src/presentation/modules/*"],
      "@presentation/*": ["./src/presentation/*"],
      "@providers/*": ["./src/presentation/providers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
